# Netlify Headers Configuration for Cache-Busting

# HTML files should not be cached to ensure latest version is always served
/index.html
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

/*.html
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

# Manifest should not be cached for version checking
/manifest.json
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache

# Service worker should not be cached
/sw.js
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache

# Static assets can be cached for long periods (fingerprinted assets)
/assets/*
  Cache-Control: public, max-age=31536000, immutable

# CSS and JS files can be cached but with shorter duration
/*.css
  Cache-Control: public, max-age=86400

/*.js
  Cache-Control: public, max-age=86400

# Security headers for all routes
/*
  X-Frame-Options: DENY
  X-Content-Type-Options: nosniff
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: geolocation=(), microphone=(), camera=()
